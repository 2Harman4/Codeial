<link rel="stylesheet" href="/css/comments.css">

<div class="post-comments-list">
    <ul id="post-comments-<%= post._id %>">
        <% for (comment of post.comments){%>
            <li>  
                <!-- delete button only visible to the creater of the comment and the creater of post -->
                <% if ((locals.user) && ((locals.user.id == comment.user.id) || ( locals.user.id == post.user.id))) { %>
                    <small>
                        <a href="/comments/destroy/<%= comment.id %>">DELETE|Comment</a>
                    </small>
                <%}%>  

                <%= comment.content %>
                
                <%= comment.user.name %>
            </li>
        <%}%>    
    </ul>

</div>